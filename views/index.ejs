<%- include('./partials/header.ejs') %> 
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>O que você precisa saber?</h1>
        <a href="/ask" class="btn btn-success btn-costume">Faça uma pergunta</a>
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <% questions.forEach(question => { %>
            <div class="card">
                <div class="card-body">
                    <h3><%= question.title %></h3>
                    <h7><%= question.description %></h7>
                </div>
                <div class="card-footer">
                    <a href="/question/<%= question.id %>"><button class="btn btn-success">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div> 
</body>
<%- include('./partials/footer.ejs') %> 
